            <RadioButton
                android:id="@+id/q7C"
                style="@style/checkBoxes"
                android:text="@string/q7C" />

            <RadioButton
                android:id="@+id/q7D"
                style="@style/checkBoxes"
                android:text="@string/q7D" />

        </RadioGroup>

        <!-- Question 8 -->

        <TextView
            style="@style/questions"
            android:text="@string/q8" />

        <CheckBox
            android:id="@+id/q8A"
            style="@style/checkBoxes"
            android:text="@string/q8A" />

        <CheckBox
            android:id="@+id/q8B"
            style="@style/checkBoxes"
